{
  "extends": ["airbnb", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "off",
    "no-unused-vars": "warn",
    "no-process-exit": "off",
    "no-undef": "off",
    "object-shorthand": "off",
    "node/no-unsupported-features/es-syntax": "off"
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
